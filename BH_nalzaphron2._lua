      end
      spawn = pUnit:SpawnCreature(GHOUL_ENTRY, pUnit:GetX()+5, pUnit:GetY(), pUnit:GetZ(), pUnit:GetO(), pUnit:GetFaction(), 0)
      NALZAPHRON[sUnit].minions[4] = spawn
      pUnit:RegisterEvent("NALZAPHRON.CheckGhoulDead", 1000, 0)
   end
end

