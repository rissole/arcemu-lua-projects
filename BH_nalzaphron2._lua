      pUnit:SetUInt32Value(UNIT_FIELD_FLAGS, UNIT_FLAG_NOT_ATTACKABLE_2)
      pUnit:Root()
      NALZAPHRON.registerAfflictionSpells(pUnit)
      local spawn
      for i=1,3 do
         spawn = pUnit:SpawnCreature(ZOMBIE_WARRIORS_ENTRY, pUnit:GetX(), pUnit:GetY()-10+(5*i), pUnit:GetZ(), pUnit:GetO(), pUnit:GetFaction(), 0)
